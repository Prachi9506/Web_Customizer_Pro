{
  "manifest_version": 3,
  "name": "Web Customizer Pro",
  "version": "1.0.0",
  "description": "Transform any website with dark mode, custom fonts, and CSS injection",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles/dark-mode.css"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Web Customizer Pro"
  },
  "background": {
    "service_worker": "background.js"
  }
  // "icons": {
  //   "16": "icons/icon16.png",
  //   "32": "icons/icon32.png",
  //   "48": "icons/icon48.png",
  //   "128": "icons/icon128.png"
  // }
}